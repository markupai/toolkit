{
  "name": "@markupai/toolkit",
  "version": "2.2.4",
  "homepage": "https://github.com/markupai/toolkit",
  "repository": {
    "type": "git",
    "url": "git@github.com:markupai/toolkit.git"
  },
  "license": "Apache-2.0",
  "author": "Markup AI",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types/main.d.ts",
      "import": "./dist/toolkit.js",
      "require": "./dist/toolkit.umd.cjs"
    }
  },
  "main": "./dist/toolkit.umd.cjs",
  "module": "./dist/toolkit.js",
  "types": "./dist/types/main.d.ts",
  "files": [
    "dist",
    "dist/types/**/*.d.ts"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json && vite build",
    "coverage": "vitest run --coverage",
    "dev": "vite",
    "format:check": "prettier . --check",
    "format:fix": "prettier . --write",
    "lint:check": "eslint .",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "test": "npm run test:unit && npm run test:integration",
    "test:integration": "vitest run -c vitest.integration.config.ts",
    "test:unit": "vitest run -c vitest.unit.config.ts --coverage",
    "type-check": "tsc --project tsconfig.json --noEmit"
  },
  "dependencies": {
    "@markupai/api": "^1.5.0"
  },
  "devDependencies": {
    "@types/node": "25.1.0",
    "@vitest/coverage-v8": "4.0.18",
    "dotenv": "17.2.3",
    "eslint": "9.39.2",
    "msw": "2.12.7",
    "prettier": "3.8.1",
    "prettier-plugin-packagejson": "3.0.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.54.0",
    "vite": "7.3.1",
    "vite-plugin-dts": "4.5.4",
    "vitest": "4.0.18"
  },
  "engines": {
    "node": ">=24"
  },
  "publishConfig": {
    "access": "public"
  }
}
