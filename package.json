{
  "name": "@acrolinx/nextgen-toolkit",
  "version": "0.0.66",
  "type": "module",
  "main": "./dist/acrolinx-nextgen-toolkit.umd.cjs",
  "module": "./dist/acrolinx-nextgen-toolkit.js",
  "types": "./dist/types/main.d.ts",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "files": [
    "dist",
    "dist/types/**/*.d.ts"
  ],
  "exports": {
    ".": {
      "types": "./dist/types/main.d.ts",
      "import": "./dist/acrolinx-nextgen-toolkit.js",
      "require": "./dist/acrolinx-nextgen-toolkit.umd.cjs"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "vitest run -c vitest.unit.config.ts",
    "test:integration": "vitest -c vitest.integration.config.ts",
    "coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@types/node": "^24.2.0",
    "@vitest/coverage-v8": "^3.2.4",
    "dotenv": "^17.2.1",
    "eslint": "^9.32.0",
    "msw": "^2.10.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0",
    "vite": "^7.0.6",
    "vite-plugin-dts": "^4.5.4"
  },
  "dependencies": {
    "acrolinx-nextgen-api": "^0.0.4",
    "i18next": "^25.3.2"
  }
}
